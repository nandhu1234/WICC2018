<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <Button
        android:layout_width="match_parent"
        android:id="@+id/button1"
        android:layout_height="wrap_content"
        android:background="@null"
        android:text="Innovation in Cluster Computing"
        android:textAlignment="textStart" />


    <Button
        android:id="@+id/button2"
        android:background="@null"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Innovation in Machine Learning"
        android:textAlignment="textStart" />


    <Button
        android:id="@+id/button3"
        android:background="@null"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Inovation in SMAC"
        android:textAlignment="textStart" />

    <Button
        android:id="@+id/button4"
        android:background="@null"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Innovation in Internet of Things"
        android:textAlignment="textStart" />


    <Button
        android:id="@+id/button5"
        android:background="@null"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Innovation in Artificial Intelligence"
        android:textAlignment="textStart" />


    <Button
        android:background="@null"
        android:id="@+id/button6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Inovation in Cyber Security"
        android:textAlignment="textStart" />

    <Button
        android:id="@+id/button7"
        android:background="@null"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Innovation in Web standards"
        android:textAlignment="textStart" />


    <Button
        android:id="@+id/button9"
        android:layout_width="match_parent"
        android:background="@null"
        android:layout_height="wrap_content"
        android:text="Inovation in ICT for Education"
        android:textAlignment="textStart" />

    <Button
        android:id="@+id/button8"
        android:background="@null"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Innovation in Ubiquitous computing"
        android:textAlignment="textStart" />
    </LinearLayout>
</ScrollView>