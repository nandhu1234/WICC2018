<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent" android:layout_width="match_parent">
    <RelativeLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center|clip_horizontal"
            android:text="Proudly Organized by"
            android:textAlignment="center"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/title"/>
        <TextView
            android:id="@+id/text"
            android:paddingTop="20dp"
            android:layout_below="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:ems="10"
            android:drawableLeft="@drawable/vij"
            android:inputType="textMultiLine"
            android:text="Shri. R.Vijayakumhar, Managing Trustee, SNR Sons Charitable Trust, Coimbatore, INDIA"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
        1
        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shri. D. Lakshminarayanaswamy, Joint-Managing Trustee, SNR Sons Charitable Trust, Coimbatore, INDIA"
            android:drawableLeft="@drawable/lak"
            android:layout_below="@+id/text"
            android:layout_centerHorizontal="true" />
        <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:ems="10"
            android:drawableLeft="@drawable/naren"
            android:inputType="textMultiLine"
            android:text="Thiru. S. Narendran, Trustee SNR Sons Charitable Trust, Coimbatore, INDIA"
            android:layout_below="@+id/text1"
            android:layout_alignParentStart="true" />
        1
        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thiru. R.Sundar, Trustee SNR Sons Charitable Trust, Coimbatore, INDIA"
            android:drawableLeft="@drawable/sun"
            android:layout_below="@+id/text2"
            android:layout_alignStart="@+id/text2" />
        <TextView
            android:id="@+id/text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dr.A. Ebenezer Jeyakumar, M.E., Ph.D., Professor and Director- Academics, SNR Sons Charitable Trust, Coimbatore, INDIA"
            android:drawableLeft="@drawable/eben"
            android:layout_below="@+id/text3"
            android:layout_alignStart="@+id/text3" />
        <TextView
            android:id="@+id/text5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dr.M.Paulraj, M.E., Ph.D.,Principal Sri Ramakrishna Institute of Technology, Coimbatore, INDIA"
            android:drawableLeft="@drawable/prin"
            android:layout_below="@+id/text4"
            android:layout_alignStart="@+id/text4" />
        <TextView
            android:id="@+id/text6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dr.K.R.Jothi, M.E., Ph.D, Professor and Head, Department of Computer Science and Engineering, Sri Ramakrishna Institute of Technology, Coimbatore, INDIA"
            android:drawableLeft="@drawable/hod"
            android:layout_below="@+id/text5"
            android:layout_alignStart="@+id/text5" />

    </RelativeLayout>
</ScrollView>