            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
        1
        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prof. Dr. Visvasuresh (Victor) Govindaswamy, Director, Computer Programs, Concordia University, Chicago,
USA"
            android:drawableLeft="@drawable/visvasuresh"
            android:layout_below="@+id/text"
