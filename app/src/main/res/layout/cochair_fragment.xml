        android:orientation="vertical"
        >
<!--        android:background="@drawable/bg23"-->


        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:ems="10"
            android:drawableLeft="@drawable/pradeep"
            android:inputType="textMultiLine"
